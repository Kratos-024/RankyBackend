generator client {
  provider = "prisma-client-js"
  output = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = ""
}
model Streak {
  id String @unique() @default(uuid())
  streak Int 
  UserDailyStat UserDailyStats @relation(fields: [id],references: [id])
}

model UserAccount {
  id String @unique() @default(uuid())
  username String
  email String
}
model Languages {
  id String @unique() @default(uuid())
  language String[] 
}

model UserStats {
  id String @unique() @default(uuid())
}

model UserDailyStats {
  id String @unique() @default(uuid())
  date String @unique()
  totalTimeSeconds Decimal
  totalTimeMinutes Decimal
  totalWords Int
  totalLines Int
  languages String[] 
  streak Streak[]
  earlyMorning String
  lateNight String
}
