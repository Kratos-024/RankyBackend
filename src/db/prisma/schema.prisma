model Streak {
  id String @unique() @default(uuid())
  uniqueId String  @unique()
  date String
  email String
  streak Int  
}

model UserAccount {
  id String @unique() @default(uuid())
  name String
  uniqueId String  @unique()
  username String? @unique()
  avatar_url String?
  email String @unique()
  refreshToken String?
  accessToken String?
  bio String?
  twitter_username String?
}
model Languages {
  id String @unique() @default(uuid())
  language String[] 
  uniqueId String  @unique()


}


model UserDailyStats {
  id                String  @id @default(uuid()) 
  uniqueId          String  @unique()
  date              String
  totalTimeMinutes  Decimal
  totalWords        Int
  totalLines        Int
  languages         String[]
  earlyMorning      String
  lateNight         String
  email             String
   @@unique([uniqueId, date]) 
}


model gitStreak{
  uniqueId String  @unique()
  gitDate String
  count Int
  level Int
}